<%- include("partials/header") -%>

<h1>Home</h1>

<p>
  <%= homeContent %>
</p>

<%posts.forEach(function(post) { %>
    <h1><%=post.title%></h1>
    <p>
      <% let content = post.content %>
      <% if (content.length <= 100) { %>
        <%= content %>
      <%} else { %>
        <%= content.slice(0, 100) + '...' %>
      <%}%>
      <% let link = "/posts/" + post.title; %>
      <a href="<%= link %>">Read more</a>
    </p>

<%});%>

<%- include("partials/footer") -%>
